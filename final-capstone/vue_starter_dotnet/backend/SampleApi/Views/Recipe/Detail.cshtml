@using SampleApi.Models
@model Recipe

@{
    ViewData["Title"] = "Detail";
}

<h1>@Model.Name</h1>

<p>Prep Time: @Model.PrepTime Min.</p>
<ul>
    <li>Vegan? @(Model.Vegan == true ? "Yes" : "No" )</li>
    <li>Vegetarian? @(Model.Vegetarian == true ? "Yes" : "No" )</li>
    <li>Gluten-Free? @(Model.GlutenFree == true ? "Yes" : "No" )</li>
</ul>


<h3><strong>Ingredients:</strong></h3>
<ul>
    @foreach (Ingredient ingredient in Model.Ingredients)
    {
        <li>@ingredient.Quantity @ingredient.UnitOfMeasurement  -  @ingredient.Name</li>
    }
</ul>


<h3><strong>Directions:</strong></h3>
<ol>
    @for (int i = 1; i < Model.Instructions.Length; i++)
    {
        <li>Step @Model.Instructions[i]</li>
    }
</ol>

